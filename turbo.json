{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        ".vercel/output/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "format": {
      "dependsOn": [
        "^format"
      ]
    },
    "precommit": {
      "dependsOn": [
        "^precommit"
      ]
    },
    "dev": {
      "inputs": [
        "$TURBO_DEFAULT$"
      ],
      "cache": false,
      "persistent": true
    }
  }
}